-- Simple grammar

-- nonterminal symbols
S -> NP VP {- main symbol -}
VP -> Verb
VP -> Verb NP
VP -> VP PP
NP[Num=?n] -> Noun[Num=?n]
NP[Num=?n] -> Det[Num=?n] Noun[Num=?n]
NP[Num=?n] -> NP[Num=?n] PP
PP -> Prep NP

-- terminal symbols
Verb -> 'flies'
Verb -> 'like'
Noun[Num=pl] -> 'flies' | 'planes'
Noun[Num=sg] -> 'time' | 'arrow'
Det[Num=sg] -> 'an'
Det[Num=pl] -> 'these'
Prep -> 'like'